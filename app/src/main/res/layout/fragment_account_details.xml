<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:contextClickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userName_account"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:text="User Name: " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/email_account"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="Email: "
            android:layout_marginTop="20dp"
            android:layout_below="@+id/userName_account"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/major_account"
            android:textStyle="italic"
            android:layout_below="@+id/email_account"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Major: " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:id="@+id/about_account"
            android:layout_below="@+id/major_account"
            android:textSize="20dp"
            android:text="About: " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:id="@+id/mood_account"
            android:layout_below="@+id/about_account"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Status: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/userName_details"
            android:layout_marginStart="54dp"
            android:layout_alignTop="@+id/userName_account"
            android:layout_alignStart="@+id/email_details" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/email_details"
            android:layout_alignBottom="@+id/email_account"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/major_details"
            android:layout_alignTop="@+id/major_account"
            android:layout_alignStart="@+id/email_details" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/about_details"
            android:layout_alignTop="@+id/about_account"
            android:layout_alignStart="@+id/major_details" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/status_details"
            android:layout_alignTop="@+id/mood_account"
            android:layout_alignStart="@+id/about_details" />

        <Button
            android:id="@+id/btn_logOut"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:padding="12dp"
            android:text="Log Out"
            android:layout_below="@+id/mood_account"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
